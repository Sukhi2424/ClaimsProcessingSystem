@using ClaimsProcessingSystem.Models.Identity
@model ClaimsProcessingSystem.Helpers.PaginatedList<ClaimsProcessingSystem.Models.Identity.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="content-card">
    <h1 class="mb-4"><i class="fas fa-users-cog"></i> User Management</h1>

    <div class="table-container">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Full Name</th>
                    <th>Employee No</th>
                    <th>Email</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <partial name="_ProfilePicture" model="user" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => user.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => user.EmployeeNo)</td>
                        <td>@Html.DisplayFor(modelItem => user.Email)</td>
                        <td class="text-end">
                            <div class="btn-group gap-2" role="group">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (Model.TotalPages > 1)
{
    <div class="pagination-container">
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="@prevDisabled">&laquo; Prev</a>

            for (var i = 1; i <= Model.TotalPages; i++)
            {
                var activeClass = (i == Model.PageIndex) ? "active-page" : "";
                <a asp-action="Index" asp-route-pageNumber="@i" class="@activeClass">@i</a>
            }

            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="@nextDisabled">Next &raquo;</a>
        }
    </div>
}
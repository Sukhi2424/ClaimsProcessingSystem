@using ClaimsProcessingSystem.Models.Identity
@model ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>
<h3 class="text-danger">Are you sure you want to permanently delete this user?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">Employee No</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeNo)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
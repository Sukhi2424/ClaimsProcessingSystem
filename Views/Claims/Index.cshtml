@model IEnumerable<ClaimsProcessingSystem.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>My Claims</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Claim</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row align-items-end">
        <div class="col-md-3">
            <label for="statusFilter" class="form-label">Filter by Status:</label>
            @Html.DropDownList("statusFilter",
            new SelectList(Enum.GetValues(typeof(ClaimsProcessingSystem.Models.ClaimStatus))),
                        "All",
                        new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>
<div class="table-container">
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Requested Amount</th>
            <th>Date Submitted</th>
            <th>Status</th>
            <th>Document</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => claim.Title)</td>
                <td>@Html.DisplayFor(modelItem => claim.Description)</td>
                <td>@Html.DisplayFor(modelItem => claim.RequestedAmount)</td>
                <td>@Html.DisplayFor(modelItem => claim.DateSubmitted)</td>
                    @* Find the <td> for Status and replace its content with this *@
                    <td>
                        @{
                            string badgeClass = claim.Status switch
                            {
                                ClaimStatus.Approved => "badge-status-approved",
                                ClaimStatus.Rejected => "badge-status-rejected",
                                _ => "badge-status-pending"
                            };
                        }
                        <span class="badge-status @badgeClass">@claim.Status</span>
                    </td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                    {
                        <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-outline-info btn-sm">View</a>
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@claim.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@claim.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@claim.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@using ClaimsProcessingSystem.Controllers
@model EmployeeDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@if (Model != null)
{
    <div id="employee-dashboard-page">
        @* Add this ID to scope the styles *@
        <div class="dashboard-header text-center">
            <h1>Welcome back, @Model.FullName!</h1>
            <p class="text-muted">Here is a summary of your claims activity.</p>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="card-icon">
                    <i class="fas fa-file-signature"></i>
                </div>
                <p class="card-label">Your Pending Claims</p>
                <p class="stat-number">@Model.PendingClaimsCount</p>
                <a asp-controller="Claims" asp-action="Index" class="card-button">View My Claims</a>
            </div>
            <div class="stat-card">
                <div class="card-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <p class="card-label">Submit a New Claim</p>
                <p class="stat-number">Start</p>
                <a asp-controller="Claims" asp-action="Create" class="card-button">Create New</a>
            </div>
            <div class="stat-card">
                <div class="card-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <p class="card-label">Manage Your Profile</p>
                <p class="stat-number">Edit</p>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="card-button">View Profile</a>
            </div>
        </div>
    </div>
}
else
{
    // Logged-out Visitor Hero Section
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1>Streamline Your Expense Claims, Effortlessly.</h1>
                <p class="lead">
                    Submit, track, and get reimbursed faster than ever. Our platform simplifies the entire process,
                    so you can focus on what matters.
                </p>
                <div class="hero-actions">
                    <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Get Started for Free</a>
                    <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            </div>
            <div class="col-lg-6 hero-visual d-none d-lg-block">
                    <img src="~/images/logo.png" alt="WCPS Logo" class="img-fluid" />
                    
            </div>
        </div>
    </div>
</div>
}
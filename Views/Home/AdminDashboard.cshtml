@model ClaimsProcessingSystem.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="dashboard-center-container">
<div class="dashboard-header">
    <h1>Admin Dashboard</h1>
    <p>Welcome back, Admin! Here's your system-wide activity overview.</p>
</div>

<div class="stats-container mb-4">
    <div class="stat-card">
        <div class="card-icon">
            <i class="fas fa-file-signature"></i>
        </div>
        <p class="card-label">Total Pending Claims</p>
        <p class="stat-number">@Model.TotalPendingClaims</p>
        <a asp-controller="Admin" asp-action="Index" class="card-button">Manage All Claims</a>
    </div>

    <div class="stat-card">
        <div class="card-icon">
            <i class="fas fa-users-cog"></i>
        </div>
        <p class="card-label">Total Registered Users</p>
        <p class="stat-number">@Model.TotalUsers</p>
        <a asp-controller="Users" asp-action="Index" class="card-button">Manage Users</a>
    </div>

    <div class="stat-card">
        <div class="card-icon">
            <i class="fas fa-history"></i>
        </div>
        <p class="card-label">View Full Audit Log</p>
        <p class="stat-number">View</p>
        <a asp-controller="Admin" asp-action="AllActivity" class="card-button">View Activity</a>
    </div>
</div>
</div>


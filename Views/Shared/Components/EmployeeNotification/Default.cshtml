@model IEnumerable<ClaimsProcessingSystem.Models.Claim>

<div class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationDropdown">
    <h6 class="dropdown-header">Recent Claim Updates</h6>
    <div class="list-group list-group-flush">
        @if (Model.Any())
        {
            @foreach (var notification in Model)
            {
                <a class="dropdown-item" asp-controller="Claims" asp-action="Details" asp-route-id="@notification.Id">
                    <div class="notification-icon">
                        @if (notification.Status == ClaimsProcessingSystem.Models.ClaimStatus.Approved)
                        {
                            <i class="fas fa-check-circle text-success"></i>
                        }
                        else
                        {
                            <i class="fas fa-times-circle text-danger"></i>
                        }
                    </div>
                    <div class="notification-content">
                        <div class="notification-title">
                            Your claim "@notification.Title" was @notification.Status.
                        </div>
                        <div class="notification-time">
                            @notification.DateProcessed?.ToLocalTime().ToString("g")
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="dropdown-item text-muted">No recent updates.</div>
        }
    </div>
</div>
@model IEnumerable<ClaimsProcessingSystem.Models.Audit>

@{
    ViewData["Title"] = "Full Activity Log";
}

<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Full Activity Log</h4>
    </div>
    <div class="card-body">
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Action</th>
                    <th>Table Name</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td class="small">@log.UserId</td>
                        <td>@log.Action</td>
                        <td>@log.TableName</td>
                        <td>@log.Timestamp.ToLocalTime()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>